PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/placement_portal

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=7d

# Email Configuration - READ SETUP_EMAIL.md BEFORE CONFIGURING
# For Gmail, you MUST use an App Password, NOT your regular password
# Visit https://myaccount.google.com/apppasswords to generate an app password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-16-character-app-password-here
EMAIL_FROM=no-reply@placement-portal.com

# Cloudinary (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# AI APIs (Optional - for AI features)
HUGGINGFACE_API_KEY=your-huggingface-api-key
OPENAI_API_KEY=your-openai-api-key

# Frontend URL
CLIENT_URL=http://localhost:5173